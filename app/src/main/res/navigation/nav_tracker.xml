<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.tracker.home.HomeFragment"
        tools:layout="@layout/home_fragment">

        <action
            android:id="@+id/action_navigation_home_to_navigation_newworkout"
            app:destination="@id/navigation_newworkout" />
    </fragment>

    <fragment
        android:id="@+id/navigation_newworkout"
        android:name="com.example.tracker.newworkout.NewWorkoutFragment"
        tools:layout="@layout/new_workout_fragment" />

</navigation>