<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_workouts">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.tracker.home.HomeFragment"
        tools:layout="@layout/home_fragment">

        <action
            android:id="@+id/action_navigation_home_to_navigation_newworkout"
            app:destination="@id/navigation_newworkout" />
    </fragment>

    <fragment
        android:id="@+id/navigation_workouts"
        android:name="com.example.tracker.home.workouts.WorkoutsFragment"
        android:label="@string/title_workouts"
        tools:layout="@layout/home_workouts_fragment" >
        <action
            android:id="@+id/action_navigation_workouts_to_navigation_stats"
            app:destination="@id/navigation_stats" />
        <action
            android:id="@+id/action_navigation_workouts_to_navigation_newworkout"
            app:destination="@id/navigation_newworkout" />
    </fragment>

    <fragment
        android:id="@+id/navigation_stats"
        android:name="com.example.tracker.home.stats.StatsFragment"
        android:label="@string/title_stats"
        tools:layout="@layout/home_stats_fragment" >
        <action
            android:id="@+id/action_navigation_stats_to_navigation_settings"
            app:destination="@id/navigation_settings" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.tracker.home.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/home_settings_fragment" />

    <fragment
        android:id="@+id/navigation_newworkout"
        android:name="com.example.tracker.newworkout.NewWorkoutFragment"
        tools:layout="@layout/new_workout_fragment" />


</navigation>